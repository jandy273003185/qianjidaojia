/* components/modal/modal.wxss */

.modal {
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    top: 0;
    background-color: rgba(0, 0, 0, 0.3);
}

.box {
    width: 600rpx;
    background-color: #fff;
    position: absolute;
    left: 50%;
    top: 20%;
    transform: translateX(-50%);
    border-radius: 16rpx;
}


.footer{
    width: 100%;
    height: 100rpx;
    margin-top: 80rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow:4px 0px 8px 0px rgba(0,0,0,0.1);
}
.concel{
    color: #333;
    border-right: 1rpx solid rgb(211, 207, 207);
}
.confirm{
    color: rgb(20, 197, 20);
}
.btn{
    width: 50%;
    height: 100rpx;
    line-height:100rpx;
    text-align: center;
  
    font-size: 38rpx; 
}

/* pages/promoteOrder/promoteOrder.wxss */
page, view, text, navigator, input, form, select, option, image ,cover-view,cover-image{
  box-sizing: border-box;
  margin: 0;
  padding:0;
  border: none;
}
.selectTime .time.fontBlue{   
    border:2rpx solid rgba(69,131,248,1);
    color: rgba(69,131,248,1);
}
.selectTime .time.fontRed{
    border: 2rpx solid rgba(247, 65, 70, 1);
    color: rgba(247, 65, 70, 1);
}
.searchRed{
    background: linear-gradient(135deg, #fc727a 0%, #f74148 100%);
}
.searchBlue{
    background: linear-gradient(180deg, #72B8FB 0%, #407DF7 100%);
}
.searchBox {
    height: 80rpx;
    width: 750rpx;
    
    padding-top: 8rpx;
}

.searchBox .input {
    width: 570rpx;
    height: 64rpx;
    line-height: 64rpx;
    border-radius: 32rpx;
    background-color: #fff;
    margin: 0 auto;
    display: block;
    text-align: center;
}

.searchBox .placeH {
    font-size: 30rpx;
    color: rgba(192, 192, 192, 1);
    display: inline-block;
    text-align: center;
}
.search-icon {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 20rpx;
    left: 570rpx;
    z-index: 999;
}
.selectTime {
    padding: 24rpx 0 0 24rpx;
    width: 100%;
}

.selectTime .time {
    width: 94rpx;
    height: 46rpx;
    line-height: 46rpx;
    text-align: center;
    border-radius: 14rpx;
    margin-right: 24rpx;
    /*  */
    border: 2rpx solid rgba(192, 192, 192, 1);
    font-size: 30rpx;
    color: rgba(192, 192, 192, 1);
}

.selectTime .time:last-child {
    width: 112rpx;
}



.orderBox {
    width: 750rpx;
}

.order {
    width: 100%;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0 0 8rpx 0 rgba(202, 202, 202, 0.24);
    margin-bottom: 36rpx;
}

.order:first-child {
    margin-top: 40rpx;
}

.order .title {
    width: 100%;
    padding: 24rpx;
    background: rgba(255, 247, 244, 1);
}

.order .title .orderInfo {
    height: 40rpx;
    font-size: 26rpx;
    color: rgba(102, 102, 102, 1);
    line-height: 40rpx;
    width: 360rpx;
}

.order .goods {
    width: 100%;
    padding: 24rpx 32rpx 58rpx 30rpx;
}

.order .goods .goodsImg {
    width: 200rpx;
    height: 200rpx;
    display: block;
    background-color: #f74148;
}

.order .goods .goodsInfo {
    width: 440rpx;
}

.order .goods .goodsInfo .goodsName {
    width: 100%;
    height: 48rpx;
    color: rgba(51, 51, 51, 1);
    line-height: 48rpx;
}

.order .goods .goodsInfo .goodsPrice {
    height: 40rpx;
    font-size: 28rpx;
    color: rgba(102, 102, 102, 1);
    line-height: 40rpx;
    margin: 8rpx 0;
}

.order .goods .goodsInfo .status {
    height: 40rpx;
    font-size: 28rpx;
    color: rgba(102, 102, 102, 1);
    line-height: 40rpx;
}

.order .goods .goodsInfo .status .statu {
    margin-right: 82rpx;
}

.order .goods .goodsInfo .sumbox{
    margin: 30rpx 0 24rpx 0;
}

.order .goods .goodsInfo .sum {
    max-width: 240rpx;
    font-size: 28rpx;
    color: rgba(51, 51, 51, 1);
    line-height: 40rpx;
}

.order .goods .goodsInfo .ratio {
    height: 24rpx;
    font-size: 24rpx;
    color: rgba(102, 102, 102, 1);
    line-height: 24rpx;
    
}

.order .goods .goodsInfo .num {
    color: #f74146;
}

.order .goods .goodsInfo .predictSum {
    height: 42rpx;
    background: rgba(51, 51, 51, 1);
    border-radius: 29rpx;
    line-height: 42rpx;
    text-align: center;
    padding: 0 23rpx;
    display: inline-block;
    color: rgba(255, 235, 178, 1);
    font-size: 28rpx;
}

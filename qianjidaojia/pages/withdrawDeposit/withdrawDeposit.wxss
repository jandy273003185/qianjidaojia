/* pages/withdrawDeposit/withdrawDeposit.wxss */
page{
  background-color: #FDFAFE;
  color: #333333;
  font-size: 32rpx;
}
.content{
  margin: 48rpx 22rpx 16rpx 22rpx;
  background: #ffffff;
  padding: 0rpx 30rpx;
}
.content-up{
  border-bottom: 1px solid #eeeeee;
  padding: 10rpx;
}
.content-up-up{
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 65rpx;
}
.content-up-up>view{
  display: flex;
  align-items: center;
}
.bankCard{
  width: 48rpx;
  height: 48rpx;
}
.bankName{
  margin-left: 24rpx;
}
.arrow{
  width: 10rpx;
  height: 22rpx;
  transform: rotate(180deg);
}
.bankCardNo,.content-down{
  color: #999999;
  font-size: 28rpx;
}

.content-middle{
  height: 168rpx;
  border-bottom: 1px solid #eeeeee;
  line-height: 84rpx;
}
.content-middle>view:last-child{
  display: flex;
  align-items: center;
}
input{padding-left: 10rpx;}
.content-down{
  line-height: 96rpx;
}

.description{
  display: flex;
  justify-content: center;
  padding: 0rpx 40rpx;
  font-size: 24rpx;
  color: #999999;
}

.withdrawDeposit{
  display: flex;
  height: 80rpx;
  margin: 98rpx;
  background:linear-gradient(135deg,rgba(9,176,7,1) 0%,rgba(2,155,0,1) 100%);
  box-shadow:0rpx 4rpx 12rpx 0rpx rgba(2,156,1,0.24);
  border-radius:40rpx;
  color: #ffffff;
  justify-content: center;
  align-items: center;
}

.goBindBank{
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
}
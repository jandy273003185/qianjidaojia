/* pages/estimate/estimate.wxss */

.estimate {
    padding: 16rpx 20rpx 30rpx 20rpx;
}

.estimateTitle {
    width: 100%;
    height: 164rpx;
    padding: 14rpx 0 30rpx 0;
    background-color: #fff;
}

.title {
    height: 48rpx;
    color: rgba(102, 102, 102, 1);
    line-height: 48rpx;
}

.selectLook {
    margin-top: 20rpx;
}

.selectItem {
    width: 82rpx;
    height: 52rpx;
    background: rgba(244, 244, 244, 1);
    border-radius: 26rpx;
    font-size: 28rpx;
    color: rgba(51, 51, 51, 1);
    line-height: 52rpx;
    text-align: center;
    margin-right: 30rpx;
}

.selectLook .selected {
    background: rgba(9, 176, 7, 0.07);
    border: 2rpx solid rgba(9, 176, 7, 1);
    color: rgba(9, 176, 7, 1);
}

.estimateList {
    margin-top: 24rpx;
    padding: 32rpx 0 28rpx 0;
    background-color: #fff;
}

.personnelImg {
    width: 60rpx;
    height: 60rpx;
    display: block;
    border-radius: 50%;
    margin-right: 20rpx;
}

.personnelName {
    width: 180rpx;
    height: 40rpx;
    font-size: 28rpx;
    color: rgba(51, 51, 51, 1);
    line-height: 40rpx;
}

.estimateTime {
    height: 36rpx;
    font-size: 24rpx;
    color: rgba(153, 153, 153, 1);
    line-height: 36rpx;
}

.imgBox {
    margin-left: 32rpx;
}

.estimateImg {
    width: 120rpx;
    height: 120rpx;
    display: block;
    margin-right: 20rpx;
}

.personnelText {
    font-size: 28rpx;
    color: rgba(51, 51, 51, 1);
    line-height: 40rpx;
    margin: 30rpx 0 10rpx 0;
}
.shopReply {
    width: 100%;
    padding: 10rpx 16rpx 16rpx 20rpx;
    background: rgba(239, 239, 239, 1);
    border-radius: 8rpx;
    margin-top: 36rpx;
}

.replyTitle {
    height: 40rpx;
    font-size: 28rpx;
    color: rgba(9, 176, 7, 1);
    line-height: 40rpx;
}

.replyText {
    font-size: 28rpx;
    color: rgba(51, 51, 51, 1);
    line-height: 40rpx;
}

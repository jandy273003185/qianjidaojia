.addBankCard{
  width:70%;
  height:80rpx;
  background:linear-gradient(135deg,rgba(9,176,7,1) 0%,rgba(2,155,0,1) 100%);
  box-shadow:0 4rpx 12rpx 0 rgba(2,156,1,0.24);
  border-radius:40rpx;
  color: #ffffff;
  line-height: 80rpx;
  text-align: center;
  position: fixed;
  bottom: 50rpx;
  margin: 0 15%;
  font-size: 32rpx;
}
.add{
  position: absolute;
  margin-left: 100rpx;
  font-size: 50rpx;
}
.del{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 140rpx;
  height: 234rpx;
  background: #333333;
  margin-top: -36rpx;
  border-top-right-radius: 12rpx;
  border-bottom-right-radius: 12rpx;
  -webkit-transform: translateX(180rpx);
  transform: translateX(180rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.touch-item {
 overflow: hidden;
}
.content {
 width: 320rpx;
 -webkit-transition: all 0.4s;
 transition: all 0.4s;
 -webkit-transform: translateX(180rpx);
 transform: translateX(180rpx);
 margin-left: -180rpx;
}
.touch-move-active .del {
 -webkit-transform: translateX(0);
 transform: translateX(0);
}


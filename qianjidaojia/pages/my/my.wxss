/**my.wxss**/
page{
  background-color:#FDFAFE;
  padding-bottom: 200rpx !important;
}
.bg{
  width: 100%;
  height: 290rpx;  
}

.userinfo {
  display: flex;
  align-items: center;
  position: absolute;
  top: 85rpx;
}

.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  margin: 0 20rpx 0 40rpx;
  border-radius: 50%;
}

.name{
  display: flex;
  flex-direction: column;
  color: #fff;
  width: 410rpx;
}
.userinfo-nickname{
  font-size: 34rpx;
  font-weight:500;
}
.ID{
  font-size: 24rpx; 
  font-weight:400;
}
.arrow{
  width: 20rpx;
  height: 36rpx;
  margin-left: 100rpx;
}

.set{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 40rpx;
  height: 36rpx;
}

.account{
  height: 128rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: #666666;
  background-color: #fff;
}
.account-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.symbol,.account-txt{
  font-size: 26rpx;
}
.account-num{
  font-size: 36rpx;
}

.order{
  display: flex;
  flex-direction: column;
  margin-top: 24rpx;
  height: 224rpx;
  background-color: #fff;
  padding: 0 20rpx;
}
.order-item,.order-item2{
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}
.order-item2{
  border-top: 2rpx solid #ECE9ED;
  padding-top: 10rpx;
}
.order-item-txt{
  width: 50%;
  text-align: left;
  color: #666666;
  font-size: 32rpx; 
  font-weight: 500; 
}
.order-item-txt2{
  width: 50%;
  text-align: right;
  color: #999999;
  font-size: 28rpx; 
  font-weight: 400;
}
.order-item-txt3{
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #666666;
  font-size: 28rpx; 
  font-weight: 400; 
  margin-top: 10rpx;
}
.arrow2{
  width: 10rpx;
  height: 22rpx;
  transform: rotate(180deg);
  color: #999999;
  margin-left: 10rpx;
}

.order-img{
  width: 64rpx;
  height: 64rpx;
}
.circleNum{
  position: absolute;
  display:inline-block;
  margin-left:30rpx;
  top: 540rpx;
  background-color:#ff5c29;
  color:#ffffff;
  border-radius:50%;
  min-width:34rpx;
  font-size:24rpx;
  text-align:center;
  z-index: 999;
}
.copy{
  margin: 18rpx;
  height: 200rpx;
}
.copy-img,.recommend-img{
  width: 100%;
  height: 100%;
}

.bag{
  display: flex;
  justify-content: space-between;
  margin: 36rpx 20rpx 60rpx 20rpx;
}
.bag-img{
  width: 324rpx;
  height: 128rpx; 
}

.recommend{
  margin: 0rpx auto;
  width: 340rpx;
  height: 34rpx;
  margin-top: 40rpx;
}

.content{
  display: flex;
  flex-wrap: wrap;
}
.goods{
  width: 346rpx;
  height: 462rpx;
  margin: 24rpx 0 0 20rpx;
  background-color: #fff;
  box-shadow:0 4rpx 8rpx 0 rgba(0,0,0,0.06);
  border-radius:22rpx;
}
.goods-img-view{
  width: 308rpx;
  height: 308rpx;
}
.goods-title{
  font-size: 28rpx;
  color: #333333;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
  font-weight: 550;
}
.goods-content{
  /* margin-top: 10rpx; */
  padding: 10rpx;
}
.goods-txt{
  font-size: 24rpx;
  color: #9D9C9D;
  line-height: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
}
.goods-info{
  display: flex;
  justify-content: space-around;
  height: 60rpx;
  align-items: center;
}
.goods-info view{
  width: 230rpx;
}
.now-price{
  font-size: 24rpx;
  color: #FF7387;
}
.symbol2{
  font-size: 20rpx;
}
.old-price{
  font-size: 20rpx;
  color: #A09FA0;
  text-decoration: line-through;  
}
.cart-img-view{
  width: 46rpx !important;
  height: 46rpx;
}
.goods-img,.cart-img{
  width: 100%;
  height: 100%;
}

/* 弹窗 */
.box{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.7);
  z-index: 999;
}
.qrcodeHide{
  display: none;
}
.dialog{
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  /* background-color: #fff; */
  border-radius: 10rpx;
  width: 80%;
  padding-top: 40rpx;
  position: absolute;
  padding-bottom: 30rpx;
  top:50%;
  left:50%;
  transform:translateX(-50%) translateY(-50%);
  -ms-transform:translateX(-50%) translateY(-50%);
  -moz-transform:translateX(-50%) translateY(-50%);
  -webkit-transform:translateX(-50%) translateY(-50%);
  -o-transform:translateX(-50%) translateY(-50%);
}
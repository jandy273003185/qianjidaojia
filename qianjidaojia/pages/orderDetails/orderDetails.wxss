/* pages/orderDetails/orderDetails.wxss */
page{
  background-color: #FDFAFE;
  color: #505050;
}
.title{
  display: flex;
  justify-content: center;
  color: #FF7387;
  font-size: 32rpx;
  background: #ffffff;
  margin-top: 20rpx;
}
.title-txt{
  border-bottom: 1px solid #eeeeee;
  width: 80%;
  text-align: center;
  padding: 12rpx;
}
.bg{
  width: 100%;
  height: 124rpx;
}
.address{
  display: flex;
  position: absolute;
  top: 100rpx;
  left: 20rpx;
  height: 124rpx;
  font-size: 28rpx;
}
.address-left{
  line-height: 124rpx;
}
.addressIcon{
  width: 40rpx;
  height: 48rpx;
}
.address-right{
  margin-left: 20rpx;
  line-height: 47rpx;
}
.name{
  color: #333333;
}
.mobile{
  margin-left: 20rpx;
  color: #999999;
}
.address-txt{
  text-overflow:ellipsis;
  overflow:hidden;
  white-space:nowrap;
  color: #333333;
  font-size: 26rpx;
  font-family:SourceHanSansSC-Medium,SourceHanSansSC;
  width: 620rpx;
}

.goods{
  display: flex;
  padding: 50rpx 20rpx 40rpx 20rpx;
  background: #ffffff;
}
.goods-img{
  min-width: 144rpx;
  width: 144rpx;
  height: 144rpx;
}
.goods-img>image{
  width: 100%;
  height: 100%;
}
.goods-title{
  flex-grow: 1;
  color: #333333;
  font-size: 26rpx;
  margin-left: 20rpx;
}
.goods-right{
  display: flex;
  flex-direction: column;
  width: 200rpx;
  font-size: 26rpx;
  text-align: right;
}
.money{
  color: #FF7387;
}
.num{
  color: #666666;
}

.goods-money{
  background: #ffffff;
  padding-bottom: 20rpx;
}
.item{
  margin: 0 20rpx;
  padding-top: 20rpx;
  display: flex;
  justify-content: space-between;
  color: #666666;
  font-size: 26rpx;
}
.line{
  border-top: 1px solid #eeeeee;
}
.pay{
  font-size: 32rpx; 
}
.pay-num{
  color: #FF7387;
}

.down{
  margin-top: 40rpx;
  padding: 20rpx;
  background: #ffffff;
}
.down-item{
  color: #999999;
  font-size: 26rpx;
  height: 40rpx;
}
.copy{
  margin-left: 20rpx;
  color: #333333;
}
.kefu{
  display: flex;
  justify-content: center;
  align-items: center;
  color: #333333;
  font-size: 26rpx;
  border-top:1px solid #eeeeee;
  margin-top: 20rpx;
  padding-top: 20rpx;
}
.kefu-img{
  width: 44rpx;
  height: 48rpx;
  margin-right: 12rpx;
}
/* 弹窗 */
.box{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.7);
  z-index: 999;
}
.qrcodeHide{
  display: none;
}
.dialog{
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  /* background-color: #fff; */
  border-radius: 10rpx;
  width: 80%;
  padding-top: 40rpx;
  position: absolute;
  padding-bottom: 30rpx;
  top:50%;
  left:50%;
  transform:translateX(-50%) translateY(-50%);
  -ms-transform:translateX(-50%) translateY(-50%);
  -moz-transform:translateX(-50%) translateY(-50%);
  -webkit-transform:translateX(-50%) translateY(-50%);
  -o-transform:translateX(-50%) translateY(-50%);
}
.specText{
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #999999;
}
.refund{
  position: absolute;
  right: 20rpx;
  margin-top: 120rpx;
  border: 2rpx solid #999999;
  padding: 4rpx 26rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
}
.refund2{
  margin-right: 150rpx;
  margin-top: 116rpx;
}
.refund3{
  position: absolute;
  right: 20rpx;
  margin-top: 120rpx;
  font-size: 28rpx;
  /* color: #FF7387; */
}
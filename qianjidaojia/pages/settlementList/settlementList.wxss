/* pages/settlementList/settlementList.wxss */
page{
  background-color: #F3EFF5;
}
.item{
  background-color: #ffffff;
  margin: 30rpx 20rpx;
  padding: 20rpx;
}
.shop{
  display: flex;
  justify-content: space-between;
}
.shopName{
  color: #039E01;
  font-size: 32rpx;
}
.goods-num{
  color: #999999;
  font-size: 24rpx;
}

.goods{
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0 0 0;
}
.goods-left{
  display: flex;
  height: 144rpx;
}
.goods-img{
  width: 144rpx;
  height: 144rpx;
}
.goods-img>image{
  width: 100%;
  height: 100%;
}
.goods-title{
  width: 400rpx;
  font-size: 28rpx;
  color: #333333;
  margin-left: 20rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.goods-right{
  display: flex;
  flex-direction: column;
  text-align: right;
}
.now-price{
  color: #333333;
  font-size: 28rpx;
}
.old-price{
  color: #999999;
  font-size: 24rpx;
  text-decoration: line-through;
}
.num{
  color: #999999;
  font-size: 24rpx;
}
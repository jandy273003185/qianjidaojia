/* pages/logistics/logistics.wxss */
page{
  background-color: #FDFAFE;
}
.goods{
  background-color: #ffffff;
  margin: 20rpx;
  padding: 0 20rpx;
  border-radius: 8rpx;
  color: #3e3e3e;
}
.goods-title{
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #e1e1e1;
  padding: 20rpx 0;
}
.status{
  color: #ff5c29;
  font-size: 28rpx;
}
.goods-content{
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #e1e1e1;
}
.goods-left{
  display: flex;
}
.goods-mid{
  padding: 20rpx 0;
}
.goods-img{
  width: 140rpx;
  height: 140rpx;
  padding: 20rpx 20rpx 20rpx 0;
}
.goods-img>image{
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.goods-name,.goods-price{
  line-height: 70rpx;
}
.goods-price{
  color: #ff5c29;
  font-size: 32rpx;
}
.goods-num{
  font-size: 28rpx;
  line-height: 140rpx;
}
.goods-down{
  padding: 20rpx 0; 
  font-size: 30rpx;
}

.logistics{
  background-color: #ffffff;
  margin:20rpx;
  padding: 40rpx 20rpx 20rpx 20rpx;
  color: #505050;
}
.item{
  display: flex;
}
.item-left{
  width: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20rpx;
}
.put-away{
  width: 50rpx;
  height: 50rpx;
  padding: 4rpx 0;
  border-radius: 50%;
  background: #1ec26b;
  color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.selected-img{
  width: 50rpx;
  height: 50rpx;
}
.selected-img>image{
  width: 100%;
  height: 100%;
}
.dashed{
  width: 1px;
  height: 100%;
  max-height: 110rpx;
  border-left: 1px dashed #1ec26b;
}
.solid{
  width: 1px;
  height: 100%;
  border-left: 1px solid #e1e1e1;
  min-height: 80rpx;
}
.cirle{
  width: 12rpx;
  height: 12rpx;
  border: 4rpx solid #e1e1e1;
  border-radius: 50%;
  margin: 0 19rpx;
}
.item-right{
  padding-bottom: 20rpx;
}
.time{
  font-size:26rpx;
  margin-bottom: 8rpx;
}
.time2{
  font-size:26rpx;
  color: #909090;
  margin-bottom: 8rpx;
}
.address{
  font-size: 28rpx;
  margin-bottom: 50rpx;
}
.address2{
  color: #909090;
  font-size: 28rpx;
  margin-bottom: 50rpx;
}
/* pages/goodsDetails/goodsDetails.wxss */

.swiperBox {
    position: relative;
    margin-bottom: 8rpx;
}

.swiper-banner {
    width: 750rpx;
    height: 750rpx;
}

.swiper-banner .item-image {
    width: 100%;
    height: 100%;
    display: block;
}

.swiperBox .imgPage {
    width: 126rpx;
    height: 52rpx;
    line-height: 52rpx;
    text-align: center;
    border-radius: 26rpx;
    font-size: 32rpx;
    color: #fff;
    position: absolute;
    right: 24rpx;
    bottom: 22rpx;
    z-index: 9;
}

.main {
    width: 100%;
    margin-bottom: 108rpx;
}

.main .info {
    padding: 0 24rpx 24rpx 24rpx;
    background-color: #fff;
    margin-bottom: 16rpx;
}

.main .info .nowPrice {
    height: 76rpx;
    line-height: 76rpx;
    vertical-align: middle;
}

.main .info .nowPrice .price {
    height: 76rpx;
    font-size: 52rpx;
    font-weight: 500;
    color: rgba(255, 115, 135, 1);
    line-height: 76rpx;
    margin-right: 20rpx;
}

.main .info .nowPrice .activityImg {
    width: 106rpx;
    height: 36rpx;
}

.main .info .oldPrice {
    height: 48rpx;
    font-size: 32rpx;
    color: rgba(157, 156, 157, 1);
    line-height: 48rpx;
}

.main .info .oldPrice .number {
    display: inline-block;
    position: relative;
}

.line {
    width: 100%;
    height: 4rpx;
    position: absolute;
    left: 2rpx;
    top: 50%;
    margin-top: 2rpx;
    background-color: rgba(157, 156, 157, 1);
}

.main .info .goodsName {
    width: 90%;
    font-size: 32rpx;
    font-weight: 550;
    color: rgba(51, 51, 51, 1);
    line-height: 48rpx;
    margin: 12rpx 0;
}

.main .info .goodsText {
    width: 680rpx;
    font-size: 28rpx;
    color: rgba(157, 156, 157, 1);
    line-height: 40rpx;
}

.main .info .expressage {
    width: 100%;
    height: 40rpx;
    font-size: 28rpx;
    color: rgba(102, 102, 102, 1);
    line-height: 40rpx;
    margin-top: 24rpx;
}

.main .coupon {
    width: 100%;
    height: 80rpx;
    padding: 14rpx 46rpx 14rpx 24rpx;
    background-color: #fff;
    font-size: 24rpx;
    color: rgba(51, 51, 51, 1);
}

.main .marb {
    margin-bottom: 2rpx;
}

.main .coupon .more {
    font-size: 28rpx;
}

.main .coupon .card {
    height: 100%;
}

.main .coupon .card .cardInco {
    width: 98rpx;
    height: 52rpx;
    line-height: 52rpx;
    text-align: center;
    font-size: 26rpx;
    color: #d1caae;
    border-radius: 26rpx;
    background: #343037;
    margin-right: 34rpx;
}
.rate{
  width: 220rpx !important;
}

.main .estimate {
    width: 100%;
    padding: 20rpx 46rpx 20rpx 24rpx;
    margin: 24rpx 0;
    background-color: #fff;
    /* display: flex;
    align-items: center; */
}

.main .estimate .estimateTitle {
    width: 100%;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    color: rgba(51, 51, 51, 1);
}

.main .estimate .estimateTitle .marl {
    margin-left: 16rpx;
}

.main .estimate .estimateText {
    width: 100%;
    margin-top: 24rpx;
}

.main .estimate .estimateText .personnel {
    height: 60rpx;
    margin-bottom: 12rpx;
}

.main .estimate .estimateText .personnelImg {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    background-color: yellowgreen;
}

.main .estimate .estimateText .personnelName {
    height: 36rpx;
    max-width: 260rpx;
    font-size: 24rpx;
    color: rgba(157, 156, 157, 1);
    line-height: 36rpx;
    margin-left: 18rpx;
}

.estimateTime {
    height: 36rpx;
    font-size: 24rpx;
    color: rgba(157, 156, 157, 1);
    line-height: 36rpx;
}

.main .estimate .estimateText .personnelText {
    width: 654rpx;
    font-size: 28rpx;
    color: rgba(51, 51, 51, 1);
    line-height: 40rpx;
    font-family: SourceHanSansSC-Regular, SourceHanSansSC;
}

.imgBox {
    width: 100%;
    margin-left: 32rpx;
    margin-top: 10rpx;
}

.shopReply {
    width: 100%;
    padding: 10rpx 20rpx 16rpx 20rpx;
    background: rgba(239, 239, 239, 1);
    border-radius: 8rpx;
    margin-top: 36rpx;
}

.replyTitle {
    height: 40rpx;
    font-size: 28rpx;
    color: rgba(9, 176, 7, 1);
    line-height: 40rpx;
}

.replyText {
    font-size: 28rpx;
    color: rgba(51, 51, 51, 1);
    line-height: 40rpx;
}

.estimateImg {
    width: 128rpx;
    height: 128rpx;
    margin-right: 20rpx;
    display: block;
}

.main .shoppingGrade {
    width: 100%;
    height: 212rpx;
    padding: 24rpx;
    background-color: #fff;
}

.main .shoppingGrade .shopping {
    width: 100%;
    height: 104rpx;
    margin-bottom: 20rpx;
}

.main .shoppingGrade .shopping .shoppingImg {
    width: 104rpx;
    height: 104rpx;
    border-radius: 50%;
    background-color: yellowgreen;
    display: block;
}

.main .shoppingGrade .shopping .shoppingName {
    width: 210rpx;
    font-size: 32rpx;
    color: rgba(51, 51, 51, 1);
    font-weight: 500;
    line-height: 48rpx;
    margin-left: 32rpx;
}

.main .shoppingGrade .shopping .attention {
    height: 68rpx;
    line-height: 68rpx;
    text-align: center;
    border: 1rpx solid #737173;
    color: #737173;
    border-radius: 10rpx;
    margin-right: 28rpx;
    padding: 0 10rpx;
}

.main .shoppingGrade .shopping .already {
    background-color: #09a306;
    color: #fff;
    border: none;
}

.main .shoppingGrade .shopping .intoShopping {
    width: 188rpx;
    height: 68rpx;
    line-height: 68rpx;
    text-align: center;
    border-radius: 10rpx;
    background-color: #09a306;
    color: #fff;
}

.main .shoppingGrade .gradeType {
    width: 185rpx;
    height: 40rpx;
    font-size: 28rpx;
    font-family: SourceHanSansSC-Regular, SourceHanSansSC;
    color: rgba(157, 156, 157, 1);
    line-height: 40rpx;
}

.main .shoppingGrade .gradeType text {
    margin-left: 15rpx;
    color: #dea7af;
}

.main .shoppingGrade .gradeType .green {
    color: #78ba89;
}

.main .footer {
    width: 100%;
    height: 108rpx;
    box-shadow: 0px 4px 8px 0px rgba(0, 0, 0, 0.5);
    background: rgba(255, 255, 255, 1);
    padding: 0 24rpx 0 46rpx;
    position: fixed;
    left: 0;
    bottom: 0;
}

.main .footer .left .marr {
    margin-right: 68rpx;
}

.main .footer .left .iconImg {
    width: 60rpx;
    height: 60rpx;
}

.main .footer .left {
    margin-top: 4rpx;
}

.main .footer .left .shoppingcart {
    position: relative;
}

.main .footer .left .shoppingcart .goodsNumber {
    width: 30rpx;
    height: 30rpx;
    display: block;
    border-radius: 50%;
    line-height: 30rpx;
    text-align: center;
    color: #fff;
    font-size: 18rpx;
    position: absolute;
    right: -12rpx;
    top: -5rpx;
    background: rgb(230, 55, 32);
}

.main .footer .left .iconName {
    width: 60rpx;
    height: 22rpx;
    font-size: 20rpx;
    color: rgba(142, 142, 147, 1);
    line-height: 22rpx;
    text-align: center;
}

.main .footer .right {
    width: 420rpx;
    height: 80rpx;
    border-radius: 40rpx;
    overflow: hidden;
}

.main .footer .right .addCart {
    background: rgba(51, 51, 51, 1);
}

.main .footer .right .gobuy {
    background: linear-gradient(135deg, rgba(255, 115, 135, 1) 0%, rgba(254, 50, 123, 1) 100%);
}

.main .footer .right .buy {
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
}
.contentDetail{
  display: flex;
  justify-content: center;
  padding: 30rpx;
  align-items: center;
}
.contentDetail-line{
  height: 2rpx;
  width: 188rpx;
  background: #979797;
}
.contentDetail-title{
  color: #666666;
  font-size: 32rpx;
  margin: 0 20rpx;
}
.rich-text{
  margin: 0 20rpx;
}

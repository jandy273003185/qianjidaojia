/* pages/battalionCustomer/battalionCustomer.wxss */

page {
    background-color: #fdfafe;
    overflow-y: hidden;
}

.bgBlue {
    background: linear-gradient(180deg, #72b8fb 0%, #407df7 100%);
}

.bgRed {
    background: linear-gradient(135deg, #fc727a 0%, #f74148 100%);
}

.deviceScroll {
    overflow: scroll;
}

.bg {
    display: flex;
    height: 80rpx;
}

.input-mobile {
    position: absolute;
    width: 70%;
    height: 70rpx;
    top: 6rpx;
    background-color: #fff;
    left: 15%;
    border-radius: 40rpx;
    text-align: center;
    font-size: 30rpx;
}

.search-icon {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 20rpx;
    left: 570rpx;
    z-index: 999;
}

.status {
    display: flex;
    align-items: center;
    padding: 24rpx 0 24rpx 0;
    border-radius: 14rpx;
}

.status text {
    border: 2rpx solid #c0c0c0;
    font-size: 30rpx;
    color: #c0c0c0;
    padding: 2rpx 10rpx;
    border-radius: 14rpx;
    margin-left: 24rpx;
}

.active {
    border: 2rpx solid #4583f8 !important;
    color: #4583f8 !important;
}

.Active {
    border: 2rpx solid rgba(247, 70, 75, 1) !important;
    color: rgba(247, 70, 75, 1) !important;
}

.item {
    display: flex;
    padding: 28rpx 30rpx 28rpx 24rpx;
    background-color: #fff;
    margin: 10rpx 0;
}

.photo {
    width: 120rpx;
    height: 120rpx;
}

.photo>image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background-color: yellow;
}

.edit {
    width: 24rpx;
    height: 24rpx;
}

.content {
    display: flex;
    width: 536rpx;
    flex-direction: column;
    margin-left: 40rpx;
}

.name {
    font-size: 30rpx;
    color: #666;
    margin-right: 12rpx;
    line-height: 42rpx;
    height: 42rpx;
    max-width: 278rpx;
}

.remark {
    color: #666;
    font-size: 24rpx;
    /* line-height: 34rpx;
    height: 34rpx; */
}

.set {
    width: 150rpx;
    height: 42rpx;
    line-height: 42rpx;
    text-align: center;
    color: #fff;
    font-size: 28rpx;
    background-color: #f7464b;
    border-radius: 21rpx;
}



.iconhead {
    font-size: 32rpx;
    color: #f7464b;
}

.text {
    width: 66rpx;
    height: 44rpx;
    color: rgba(247, 70, 75, 1);
    line-height: 44rpx;
    margin-left: 6rpx;
}

.mobile, .time {
    color: #c0c0c0;
    font-size: 24rpx;
    line-height: 34rpx;
    height: 34rpx;
}

/* 插槽弹窗 */

.title {
    width: 100%;
    height: 50rpx;
    margin: 30rpx 0;
    line-height: 50rpx;
    text-align: center;
    font-size: 40rpx;
    font-weight: 500;
}
.title2 {
    width: 100%;
    height: 50rpx;
    margin: 30rpx 0;
    line-height: 50rpx;
    text-align: center;
    font-size: 34rpx;
    font-weight: 500;
}

.input {
    width: 500rpx;
    height: 64rpx;
    line-height: 50rpx;
    padding-left: 30rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 40rpx;
    border: 1rpx solid #999;
    margin: 0 auto;
}

.placeholder {
    height: 50rpx;
    line-height: 50rpx;
    color: #999;
}

.calculate{
  display: flex;

}
.calculate>image{
  width: 400rpx;
  height: 100rpx;
  margin-left: 20rpx;
}
.calculate>input{
  width: 116rpx;
  height: 100rpx;
  border: 1px solid #dddddd;
  margin-left: 20rpx;
  padding-left: 20rpx;
}
/* pages/regimentalInfo/regimentalInfo.wxss */
page, view, text, navigator, input, form, select, option, image ,cover-view,cover-image{
  box-sizing: border-box;
  margin: 0;
  padding:0;
  border: none;
}
.regimental {
    width: 100%;
    height: 290rpx;
    position: relative;
}

.intoRed{
    color: rgba(253, 42, 42, 1);
}
.numRed{
    color: #f74045;
}
.vlineRed{
    background: rgba(224, 2, 2, 1);
}
.blue{
    color: rgba(69,131,248,1);
}
.vlineBlue{
    background: rgba(69,131,248,1);
}

.regimental .bg {
    height: 100%;
    width: 100%;
    display: block;
}

.regimental .regimentalInfo {
    width: 100%;
    height: 120rpx;
    position: absolute;
    top: 86rpx;
    left: 0;
    background-color: rgba(0, 0, 0, 0);
    padding: 0 24rpx;
}

.regimental .regimentalInfo .head {
    width: 120rpx;
    height: 120rpx;
    display: block;
    border-radius: 50%;
    background-color: yellowgreen;
    margin-right: 28rpx;
}

.regimental .regimentalInfo .regimentalName {
    height: 50rpx;
    font-size: 34rpx;
    color: rgba(255, 255, 255, 1);
    line-height: 50rpx;
    display: flex;
    flex-direction: column;
}
.nickname{font-size: 34rpx;}
.see-url{font-size: 28rpx;}
.regimental .regimentalInfo .guideBox {
    padding-bottom: 10rpx;
    border-bottom: 2rpx solid #fff;
    border-bottom-left-radius: 2rpx;
    border-bottom-right-radius: 2rpx;
}

.regimental .regimentalInfo .guideBox .guide {
    width: 128rpx;
    height: 48rpx;
    font-size: 32rpx;
    color: rgba(255, 255, 255, 1);
    line-height: 48rpx;
    margin-right: 8rpx;
}

.more {
    font-size: 26rpx;
}

.regimental .withdraw {
    width: 704rpx;
    height: 102rpx;
    position: absolute;
    bottom: -32rpx;
    left: 50%;
    transform: translateX(-50%);
    background-color: #fff;
    box-shadow: 0px 0px 8px 6px rgba(202, 202, 202, 0.24);
    border-radius: 8px;
    padding: 0 24rpx;
}

.regimental .withdraw .withdrawLeft {
    width: 128rpx;
    height: 48rpx;
    font-size: 32rpx;
    color: rgba(51, 51, 51, 1);
    line-height: 48rpx;
}

.regimental .withdraw .withdrawInto {
    width: 64rpx;
    height: 48rpx;
    font-size: 32rpx;
    
    line-height: 48rpx;
    margin-right: 8rpx;
}

.myClient {
    width: 750rpx;
    height: 234rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0 0 8rpx 0 rgba(202, 202, 202, 0.24);
    margin-bottom: 24rpx;
    padding: 24rpx 28rpx 20rpx 24rpx;
}

.marT64 {
    margin-top: 64rpx;
}

.myClient .title {
    width: 100%;
    height: 48rpx;
}

.myClient .title .eyes {
    width: 44rpx;
    height: 28rpx;
    display: block;
}

.myClient .title .titleText {
    width: 128rpx;
    height: 48rpx;
    color: rgba(51, 51, 51, 1);
    line-height: 48rpx;
    margin-right: 10rpx;
}

.myClient .title .moreText {
    width: 56rpx;
    height: 40rpx;
    font-size: 28rpx;
    color: rgba(116, 116, 116, 1);
    line-height: 40rpx;
    margin-right: 8rpx;
    display: block;
    margin-top: 2rpx;
}

.myClient  .nubBox {
    margin-top: 34rpx;
    padding: 0 10rpx;
}

.myClient  .nubBox .today {
    height: 72rpx;
    font-size: 48rpx;
    font-family: SourceHanSansSC-Medium, SourceHanSansSC;
    font-weight: 500;
    
    line-height: 72rpx;
}

.myClient  .nubBox .today .unit {
    font-size: 24rpx;
}

.myClient  .nubBox .all {
    height: 40rpx;
    font-size: 28rpx;
    color: rgba(51, 51, 51, 1);
    line-height: 40rpx;
}

.myClient  .nubBox .vline {
    width: 2rpx;
    height: 80rpx;
    
    border-radius: 3rpx;
}

.footer {
    padding-top: 32rpx;
    width: 360rpx;
    height: 78rpx;
    margin: 0 auto 18rpx;
    color: rgba(191, 191, 191, 1);
    line-height: 48rpx;
    letter-spacing: 4rpx;
}

/* 弹窗 */
.box{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.7);
  z-index: 999;
}
.qrcodeHide{
  display: none;
}
.dialog{
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  /* background-color: #fff; */
  border-radius: 10rpx;
  width: 500rpx;
  height: 608rpx;
  padding-top: 40rpx;
  position: absolute;
  padding-bottom: 30rpx;
  top:50%;
  left:50%;
  transform:translateX(-50%) translateY(-50%);
  -ms-transform:translateX(-50%) translateY(-50%);
  -moz-transform:translateX(-50%) translateY(-50%);
  -webkit-transform:translateX(-50%) translateY(-50%);
  -o-transform:translateX(-50%) translateY(-50%);
  background: #ffffff;
}
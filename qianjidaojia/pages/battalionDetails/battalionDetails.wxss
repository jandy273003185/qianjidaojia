/* pages/battalionDetails/battalionDetails.wxss */

page {
    background-color: #fdfafe;
}

.bg {
    width: 100%;
    height: 290rpx;
}

.userinfo {
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    position: absolute;
    top: 85rpx;
}

.userinfo-avatar {
    width: 120rpx;
    height: 120rpx;
    margin: 0 20rpx 0 24rpx;
    border-radius: 50%;
    background-color: yellowgreen;
}

.name {
    display: flex;
    flex-direction: column;
    color: #fff;
    width: 400rpx;
}

.userinfo-nickname {
    font-size: 34rpx;
    font-weight: 500;
    height: 50rpx;
    color: rgba(255, 255, 255, 1);
    line-height: 50rpx;
}

.remark {
    height: 40rpx;
    font-size: 28rpx;
    color: rgba(255, 255, 255, 1);
    line-height: 40rpx;
    margin-top: 6rpx;
}

.edit {
    width: 32rpx;
    height: 32rpx;
    font-size: 32rpx;
    margin-left: 116rpx;
    color: #fff;
}

.content-up {
    width: 702rpx;
    height: 234rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0 8rpx 8rpx 0 rgba(202, 202, 202, 0.25);
    border-radius: 6rpx;
    position: relative;
    top: -44rpx;
    left: 50%;
    transform: translateX(-50%);
    padding: 24rpx 0 50rpx 0;
}

.survey {
    margin: 0rpx 0 18rpx 24rpx;
    height: 44rpx;
    color: rgba(247, 70, 75, 1);
    line-height: 44rpx;
}

.item {
    width: 350rpx;
    padding: 0 28rpx 0 24rpx;
}

.borR {
    border-right: 2rpx solid rgba(247, 70, 75, 1);
}

.surveyBox {
    margin-bottom: 18rpx;
}

.today {
    height: 40rpx;
    font-size: 28rpx;
    color: rgba(86, 86, 86, 1);
    line-height: 40rpx;
    display: block;
}

.num {
    height: 50rpx;
    font-size: 36rpx;
    color: rgba(247, 70, 75, 1);
    line-height: 50rpx;
    display: block;
}

.unit {
    font-size: 28rpx;
}

.battalion {
    width: 702rpx;
    margin: 0 auto;
    padding: 24rpx 28rpx 50rpx 24rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0 8rpx 8rpx 0 rgba(202, 202, 202, 0.25);
    border-radius: 6rpx;
}

.mar {
    margin: 44rpx auto 46rpx;
}

.battalionAll {
    height: 44rpx;
    color: rgba(247, 70, 75, 1);
    line-height: 44rpx;
}

.earnings {
    margin-top: 18rpx;
}

.bottom-txt {
    width: 420rpx;
    height: 48rpx;
    text-align: center;
    color: rgba(191, 191, 191, 1);
    line-height: 48rpx;
    letter-spacing: 4rpx;
    margin: 0 auto 18rpx;
}
/* 插槽弹窗 */

.title {
    width: 100%;
    height: 50rpx;
    margin: 30rpx 0;
    line-height: 50rpx;
    text-align: center;
    font-size: 40rpx;
    font-weight: 500;
}

.input {
    width: 500rpx;
    height: 64rpx;
    line-height: 50rpx;
    padding-left: 30rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 40rpx;
    border: 1rpx solid #999;
    margin: 0 auto;
}

.placeholder {
    height: 50rpx;
    line-height: 50rpx;
    color: #999;
}

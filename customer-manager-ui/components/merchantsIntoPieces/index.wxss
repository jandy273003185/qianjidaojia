/* components/merchantsIntoPieces/index.wxss */
page{
  background-color: #eeeeee;
}

.navbar{
  display: flex;
  align-items: center;
  background-color: #699dd7;
  width: 100%;
  height: 100rpx;
  padding-top: 40rpx;
  padding-left: 10rpx;
  position: fixed;
  z-index: 999;
}
.navbar image{
  width: 22rpx;
  height: 32rpx;
  padding: 8rpx 20rpx 0 20rpx;
}
.navbar text{
  color: #fff !important;
  font-size: 38rpx !important;
}

.top{
  display: flex;
  justify-content: space-between;
  height: 140rpx;
  background-color: #fff;
  padding: 140rpx 80rpx 0 80rpx;
}
.top-item{
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.top-item-num{
  width: 46rpx;
  height: 46rpx;
  border-radius: 23rpx;
  background-color: #cccaca;
  text-align: center;
  color: #fff;
  margin-bottom: 6rpx;
}
.first .top-item-num{
  background-color: #699dd7;
}
.first .top-item-txt{
  color: #699dd7;
}
.top-item-txt{
  color: #b4b3b3;
  font-size: 26rpx;
}

.middle{
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin-top: 20rpx;
}
.middle-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:24rpx;
}
.middle-item view,.business-license-txt{
  font-weight: bold;
  color: #494848;
  font-size: 30rpx;
}
.middle-item input{
  text-align: right;
  font-size: 28rpx;
  width: 500rpx;
}
.line{
  border:0.1px solid #f6f6f6;
  border-left: none;
  border-right: none;
  border-top: none;
}

.picker{
  display: flex;
  align-items: center;
  font-weight: 500 !important;
}
.picker text{
  padding-left: 20rpx;
}
.select_img{
  width: 28rpx;
  height: 20rpx;
  display: block;
  transition:transform 0.3s;
  margin-left: 20rpx;
}
.selectAddress{
  display: flex;
  justify-content: center;
  align-items: center;
}
.selectAddress text{
  padding: 6rpx 10rpx;
  font-size: 28rpx;
  font-weight: 500;
}
.defaultAddress text,.date,.row-line{
  color: #ccc !important;
}
.section{
  display: flex;
  font-weight: 500;
}
.section__title{
  font-weight: 500 !important;
}
.page__bd{
  font-weight: 500 !important;
  display: flex;
  align-items: center;
  margin-left: 30rpx;
}
.row-line{
  padding: 0 18rpx;
}
.section_gap{
  margin: 0 -8rpx 0 16rpx;
  transform: scale(0.8);
}
.yyDate{
  padding: 27rpx;
}

.photoView{
  display: flex;
  padding: 20rpx 0rpx 0rpx 20rpx;
  flex-wrap: wrap;
}
.photo{
  display: flex;
  flex-direction: column; 
  margin-top: 20rpx;
}
.photo-txt{
  font-size: 30rpx;
  font-weight: bold;
  color: #494848;
}
.photo-content{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 338rpx;
  height: 200rpx;
  background-color: #fff;
  margin: 16rpx 26rpx 0 0;
}
.photo-content image{
  width: 50rpx;
  height: 50rpx;
}
.photo-content view{
  color: #699dd7;
  font-size: 28rpx;
  margin-top: 10rpx;
}

.next{
  background-color: #699dd7;
  color: #fff;
  width: 95%;
  /* height: 70rpx; */
  font-size: 30rpx;
  margin: 100rpx 20rpx;
}
.upload-img{
  width: 100% !important;
  height: 100% !important;
}
.photoTxtHide,.delImgHide{
  display: none;
}
.del-img{
  position:absolute;
  width:30rpx;
  height:30rpx;
  left:344rpx;
}
.odd-img{
  left:708rpx;
}
.typeHide{
  display: none;
}
.ad_popError{ 
  background: #de352d; 
  color: #fff; 
  height: 70rpx; 
  line-height: 58rpx; 
  font-size: 30rpx; 
  text-align: center; 
  position: fixed; 
  left: 0;
  top: 140rpx; 
  width: 100%; 
  z-index:9999999;
}

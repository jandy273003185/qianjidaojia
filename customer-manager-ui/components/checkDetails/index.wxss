/* components/checkDetails/index.wxss */
page{
  background-color: #eeeeee;
}

.navbar{
  display: flex;
  align-items: center;
  background-color: #699dd7;
  width: 100%;
  height: 100rpx;
  padding-top: 40rpx;
  padding-left: 10rpx;
  position: fixed;
  z-index: 999;
}
.navbar image{
  width: 22rpx;
  height: 32rpx;
  padding: 8rpx 20rpx 0 20rpx;
}
.navbar text{
  color: #fff !important;
  font-size: 38rpx !important;
}

.top{
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  padding: 190rpx 20rpx 50rpx;


}
.top image{
  width: 100rpx;
  height: 100rpx;
}
.title{
  margin-top: 20rpx;
  font-size: 30rpx;
  color: #3d3d3d;
}
.time{
  margin: 4rpx 0rpx 40rpx 0rpx;
}
.details, .time{
  color: #aaa7a7;
  font-size: 26rpx;
  padding: 4rpx 0;
}

.next{
  background-color: #699dd7;
  color: #fff;
  width: 95%;
  font-size: 30rpx;
  margin: 100rpx 20rpx 0rpx 20rpx;
}

.back{
  display: flex;
  justify-content: center;
  color: #699dd7;
  font-size: 30rpx;
  padding: 40rpx;
}

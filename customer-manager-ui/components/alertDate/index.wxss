/* components/alertDate/index.wxss */
.box{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.7);
}
.dialog{
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  border-radius: 10rpx;
  width: 92%;
  padding-top: 40rpx;
  position: absolute;
  padding-bottom: 30rpx;
  top:50%;
  left:50%;
  transform:translateX(-50%) translateY(-50%);
  -ms-transform:translateX(-50%) translateY(-50%);
  -moz-transform:translateX(-50%) translateY(-50%);
  -webkit-transform:translateX(-50%) translateY(-50%);
  -o-transform:translateX(-50%) translateY(-50%);
}
.title{
  display: flex;
  justify-content: center;
  padding: 0 0 26rpx 0;
  font-size: 34rpx;
  color: #1f1e1e;
}
.time{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.selectedTime{
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #929292;
  width: 190rpx;
  line-height: 40rpx;
  padding: 8rpx 0;
  margin: 0 16rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #929292;
}
.active{
  color: #699dd7;
  border-color: #699dd7; 
}
.dateImg{
  width: 50rpx;
  height: 30rpx;
}
.startTimeView,.endTimeView{
  display: flex;
  justify-content: space-between;
  color: #929292;
  font-size: 28rpx;
  border-top: 0.1rpx solid #f6f6f6;
  padding: 30rpx 20rpx;
  width: 86%;
}
.startTime,.endTime{
  color: #1f1e1e;
}

.confirmView{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-top: 0.1rpx solid #f6f6f6;
  padding: 40rpx 0 10rpx 0;
  font-size: 30rpx;
  width: 92%;
}
.cancel{
  margin-right: 50rpx;
  color: #699dd7;
} 
.confirm{
  background: #699dd7;
  color: #fff;
  padding: 8rpx 50rpx;
  border-radius: 4rpx;
}

.hide{
  display: none;
}
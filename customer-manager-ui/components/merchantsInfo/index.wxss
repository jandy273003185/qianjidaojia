/* components/message/index.wxss */
page{
  background-color: #eeeeee;
}

.navbar{
  display: flex;
  align-items: center;
  background-color: #699dd7;
  width: 100%;
  height: 100rpx;
  padding-top: 40rpx;
  padding-left: 10rpx;
  position: fixed;
  z-index: 999;
}
.navbar image{
  width: 22rpx;
  height: 32rpx;
  padding: 8rpx 20rpx 0 20rpx;
}
.navbar text{
  color: #fff !important;
  font-size: 38rpx !important;
}

.merchants{
  display: flex;
  justify-content: space-between;
  align-items: center;  
  color: #505050;
  /* font-size: 28rpx; */
  padding: 180rpx 130rpx 40rpx 130rpx;
}
.merchantsTitle{
  width: 200rpx;
  padding: 10rpx;
  border-radius: 10rpx;
  text-align: center;
  background-color: #e4e4e4;
}
.active{
  background-color: #fff;
}
.isHide{
  display: none;
}
.isHide2{
  display: none !important;
}
/* 基本信息 */
.info{
  margin-bottom: 40rpx;
}
.middle{
  display: flex;
  flex-direction: column;
  background-color: #fff;
}
.middle-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:24rpx;
}
.middle-item view,.business-license-txt{
  font-weight: bold;
  color: #494848;
  font-size: 30rpx;
}
.middle-item input{
  text-align: right;
  font-size: 28rpx;
}
.line{
  border:0.1px solid #f6f6f6;
  border-left: none;
  border-right: none;
  border-top: none;
}

.picker{
  display: flex;
  align-items: center;
  font-weight: 500 !important;
}
.select_img{
  width: 28rpx;
  height: 20rpx;
  display: block;
  transition:transform 0.3s;
  margin-left: 20rpx;
}
.selectAddress{
  display: flex;
  justify-content: center;
  align-items: center;
}
.selectAddress text{
  padding: 6rpx 10rpx;
  font-size: 28rpx;
  font-weight: 500;
}
.defaultAddress text,.date,.row-line{
  color: #ccc !important;
}
.section{
  display: flex;
  font-weight: 500;
}
.section__title{
  font-weight: 500 !important;
}
.page__bd{
  font-weight: 500 !important;
  display: flex;
  align-items: center;
  margin-left: 30rpx;
}
.row-line{
  padding: 0 18rpx;
}
.section_gap{
  margin: 0 -8rpx 0 16rpx;
  transform: scale(0.8);
}
.yyDate{
  padding: 27rpx;
}

.photoView{
  display: flex;
  padding: 10rpx 0rpx 0rpx 24rpx;
  flex-wrap: wrap;
}
.photo{
  display: flex;
  flex-direction: column; 
  margin-top: 20rpx;
}
.photo-txt{
  font-size: 30rpx;
  font-weight: bold;
  color: #494848;
}
.photo-content{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 336rpx;
  height: 200rpx;
  background-color: #fff;
  margin: 16rpx 26rpx 0 0;
}
.photo-content image{
  width: 50rpx;
  height: 50rpx;
}
.photo-content view{
  color: #699dd7;
  font-size: 28rpx;
  margin-top: 10rpx;
}
/* 签约产品 */
.productList{
  padding: 0rpx 30rpx 0 20rpx;
  font-size: 28rpx;
}
.productType{
  padding: 10px 0;
  font-size: 28rpx;
  border-bottom: 0.1px solid #f6f6f6;
}
.product{
  border-radius: 10rpx;
  padding: 0rpx 20rpx 20rpx 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.productHide{
  display: none;
}
checkbox-group{
  display: flex;
  flex-direction: column;
}
.checkboxProduct{
  display: flex;
  justify-content: space-between;
  border-bottom: 0.1px solid #f6f6f6;
  flex-wrap: wrap;
}
.checkbox{
  display: flex;
  align-items: center;
  padding: 18rpx 0;
}
.rateView{
  display: flex;
  align-items: center;
  /* position: absolute; */
  line-height: 84rpx;
}

.rate{
  color: #b4b3b3;
}
.rateVal{
  border-bottom: 0.1rpx solid #699dd7;
  width: 240rpx;
  text-align: center;
  padding: 20rpx 0;
  color: #b4b3b3;
}
.rate2{
  right: 0;
  color: #b4b3b3;
}
/*复选框外框样式*/
checkbox .wx-checkbox-input {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #999;
  border-radius: 100%;
}
/*复选框外框选中样式*/
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border-color: #3cbcee;
}
/*复选框选中后内部样式*/
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 60%;
  height: 60%;
  background: #3cbcee;
  border-radius: 100%;
  content: '';
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.further{
  color: #699dd7;
  /* font-size: 28rpx; */
  padding: 20rpx 20rpx 0 20rpx;
}

